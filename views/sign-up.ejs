<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
  </head>
  <body>
    <main>
      <div class="card">
        <div class="page-title uppercase">
          <h1>sign up</h1>
        </div>
        <div class="ui-message">
          <p>
            Signing up is required if you wish to peruse or post on the
            <span class="red-letter">C</span>apital
            <span class="red-letter">A</span>rea
            <span class="red-letter">N</span>eigborhood Message Board.
          </p>
        </div>
        <form class="sign-up-form" action="/app/sign-up" method="POST">
          <label for="first_name"> first name </label>
          <input
            id="first_name"
            name="first_name"
            placeholder="enter first name"
            type="text"
            required
          />
          <label for="last_name"> last name </label>
          <input
            id="last_name"
            name="last_name"
            placeholder="enter last name"
            type="text"
            required
          />
          <label for="email"> email </label>
          <input
            id="email"
            name="email"
            placeholder="enter email address"
            type="email"
            required
          />
          <label for="birthdate"> birthdate </label>
          <input
            id="birthdate"
            name="birthdate"
            placeholder="enter birthdate"
            type="date"
            required
          />
          <!-- TODO - Relabel this password_hash????? -->
          <label for="password"> password </label>
          <input
            id="password"
            name="password"
            placeholder="select a password"
            type="password"
            required
          />
          <label for="confirm_password"> confirm password </label>
          <input
            id="confirm_password"
            name="confirm_password"
            placeholder="re-enter chosen password"
            type="password"
            required
          />
          <div class="button-container">
            <a class="fake-button" href="/app/">home</a>
            <button type="submit">submit</button>
          </div>
        </form>
      </div>
    </main>
    <%- include('./partials/footer.ejs') %>
  </body>
</html>
